<h1>Customer Car Table Listing</h1>
<% if (allrecs.length > 0) {%>
<table border=1 >
    <tr>
        <th>Car ID</th>
        <th>Customer ID</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.car_id %></td>
        <td><%= recref.customer_id %></td>
        
       
        <td><a href='/customer_car/<%= recref.customer_id %>'> Details</a></td>
        <td><a href='/customer_car/<%= recref.customer_id %>/edit'>Edit</a></td>
        <td><a href='/customer_car/<%= recref.customer_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>

    </tr>
    <% }); %>
</table>

<% } else { %>
<p>Not Records Available</p>
<% } %>
<p> <a href='/customer_car/addrecord'>Add New</a> </p>
