<h1> Edit Work Order</h1>
<form action="/workorder/save" method="post">
    <input type="hidden" name="order_id" value="<%= rec.order_id %>">
    <table>
        <tr>
            <td> Customer ID : </td>
            <td> <input type="text" name="customer_id" value=<%= rec.customer_id %> required> </td>
        </tr>
        <tr>
            <td> Car ID : </td>
            <td> <input type="text" name="car_id" value=<%= rec.car_id %> required> </td>
        </tr>
        <tr>
            <td> Promotion ID : </td>
            <td> <input type="text" name="promo_id" value=<%= rec.promo_id %> required> </td>
        </tr>

        <tr>
            <td> Additional Details : </td>
            <td> <input type="text" name="addi_details" value=<%= rec.addi_details %> required> </td>
        </tr>
        <tr>
            <td> Purchase Date: </td>
            <td> <input type="date" name="purchase_date" value=<%= rec.purchase_date.toISOString().split('T')[0] %> required> </td>
        </tr>
        <tr>
            <td> Payment Status: </td>
            <td> <input type="text" name="payment_status" value=<%= rec.payment_status %> required> </td>
        </tr>
    </table>
    <button type="submit">Save</button>
</form>
