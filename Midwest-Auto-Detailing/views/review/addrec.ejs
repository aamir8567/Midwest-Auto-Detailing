<h1> New Review</h1>
<form action="/review" method="post">
    <table>
        <tr>
            <td> Customer ID : </td>
            <td> <input type="text" name="customer_id" required> </td>
        </tr>
        <tr>
            <td> Service ID : </td>
            <td> <input type="text" name="service_id" required> </td>
        </tr>

        <tr>
            <td> Review Date : </td>
            <td> <input type="date" name="review_date" required> </td>
        </tr>
        <tr>
            <td> Comment : </td>
            <td> <input type="text" name="comment" required> </td>
        </tr>
        <tr> <td> Rating: </td> 
            <td> 
                <input type="radio" name="rating" value="1">★ <br/> 
                <input type="radio" name="rating" value="2">★★ <br/>
                <input type="radio" name="rating" value="3">★★★ <br/>
                <input type="radio" name="rating" value="4">★★★★ <br/>
                <input type="radio" name="rating" value="5" checked="true" >★★★★★<br/>
            </td> 
        </tr>
        
    </table>
    <button type="submit">Save</button>
</form>
