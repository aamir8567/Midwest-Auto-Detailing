<h1>Service Table Listing</h1>
<% if (allrecs.length > 0) {%>
<table border=1 >
    <tr>
        <th>Service ID</th>
        <th>Service Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>

    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.service_id %></td>
        <td><%= recref.service_name %></td>
        <td><%= recref.description %></td>
        <td><%= recref.price %></td>
        <td><%= recref.serviceimg %></td>

        <td><a href='/service/<%= recref.service_id %>'> Details</a></td>
        <td><a href='/service/<%= recref.service_id %>/edit'>Edit</a></td>
        <td><a href='/service/<%= recref.service_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>

    </tr>
    <% }); %>
</table>

<% } else { %>
<p>Not Records Available</p>
<% } %>
<p> <a href='/service/addrecord'>Add New</a> </p>
