<h1>Customer Table Listing</h1>
<% if (allrecs.length > 0) {%>
<table border=1 >
    <tr>
        <th>Car ID</th>
        <th>Car Year</th>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Car Type</th>
        <th>Vin</th>
        <th>License Plate</th>
        <th>Car Color</th>
        
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.car_id %></td>
        <td><%= recref.caryear %></td>
        <td><%= recref.carmake %></td>
        <td><%= recref.model %></td>
        <td><%= recref.cartype %></td>
        <td><%= recref.vin%></td>
        <td><%= recref.license_plate %></td>
        <td><%= recref.carcolor %></td>
        
        <td><a href='/car/<%= recref.car_id %>'> Details</a></td>
        <td><a href='/car/<%= recref.car_id %>/edit'>Edit</a></td>
        <td><a href='/car/<%= recref.car_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
</table>

<% } else { %>
<p>Not Records Available</p>
<% } %>
<p> <a href='/car/addrecord'>Add New</a> </p>
